@model ProgrammersBlog.Entities.Dtos.UserLoginDto
@{
    Layout = "_UserLoginLayout";
    ViewBag.Title = "Giriş Yap";
}
<div class="container">
    <div class="forms-container">
        <div class="signin-signup">
            <form sp-controller="Auth" asp-action="Login" method="post" class="sign-in-form">
                <h2 class="title">Giriş Yap</h2>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="input-field">
                    <i class="fas fa-user"></i>
                    @*<label class="small mb-1" asp-for="Email"></label>*@
                    <input type="text" asp-for="Email" type="email" placeholder="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="input-field">
                    <i class="fas fa-lock"></i>
                    @*<label class="small mb-1" asp-for="Password"></label>*@
                    <input asp-for="Password" type="password" placeholder="Şifre" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <input type="submit" value="Giriş" class="btn solid" />

                <p class="social-text">Sosyal Medya Hesaplarımızı Takip Etmeyi Unutmayın!</p>
                <div class="social-media">
                    <a href="#" class="social-icon">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a href="#" class="social-icon">
                        <i class="fab fa-twitter"></i>
                    </a>
                    <a href="#" class="social-icon">
                        <i class="fab fa-google"></i>
                    </a>
                    <a href="#" class="social-icon">
                        <i class="fab fa-linkedin-in"></i>
                    </a>
                </div>
            </form>
            <form action="#" class="sign-up-form">
                <h2 class="title">Kayıt Ol</h2>
                <div class="input-field">
                    <i class="fas fa-user"></i>
                    <input type="text" placeholder="Kullanıcı Adı" />
                </div>
                <div class="input-field">
                    <i class="fas fa-envelope"></i>
                    <input type="email" placeholder="Email" />
                </div>
                <div class="input-field">
                    <i class="fas fa-lock"></i>
                    <input type="password" placeholder="Şifre" />
                </div>
                <input type="submit" class="btn" value="Kayıt Ol" />
                <p class="social-text">Sosyal Medyada Bizi Takip Etmeyi Unutma!</p>
                <div class="social-media">
                    <a href="#" class="social-icon">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a href="#" class="social-icon">
                        <i class="fab fa-twitter"></i>
                    </a>
                    <a href="#" class="social-icon">
                        <i class="fab fa-google"></i>
                    </a>
                    <a href="#" class="social-icon">
                        <i class="fab fa-linkedin-in"></i>
                    </a>
                </div>
            </form>
        </div>
    </div>

    <div class="panels-container">
        <div class="panel left-panel">
            <div class="content">
                <h3>Aramıza Katıl</h3>
                <p>
                   Binlerce şehir,binlerce lokasyon  TEK BIR YERDE! 
                   Geri dönüşlerini bekliyor olacağız!
                </p>
                <button class="btn transparent" id="sign-up-btn">
                    Kayıt Ol
                </button>
            </div>
            <img src="~/wwwroot/img/svg/log.svg" class="image" alt="" />
        </div>
        <div class="panel right-panel">
            <div class="content">
                <h3>Yeni Anılarını Paylaşmak için Giriş Yap</h3>
                <p>
                    Binlerce gezgin senin fikirlerini merak ediyor!
                </p>
                <button class="btn transparent" id="sign-in-btn">
                    Hoşgeldiniz
                </button>
            </div>
            <img src="~/wwwroot/img/svg/register.svg" class="image" alt="" />
        </div>
    </div>
</div>
